<t t-name="sally_flowers.FlowerList" owl="1">
    <div class="o_sally_flowers container mt-5 p-4 bg-white shadow rounded-4">
        <h2 class="text-center display-5 fw-bold text-primary mb-4">ðŸŒ¸ Sally Flowers List</h2>

        <!-- Add Flower Form -->
        <form class="row g-3 mb-4">
            <div class="col-12">
                <input type="text"
                    t-model="state.newCommonName"
                    placeholder="Common Name"
                    class="form-control form-control-lg" />
            </div>

            <div class="col-md-6">
                <input type="text"
                    t-model="state.newScientificName"
                    placeholder="Scientific Name"
                    class="form-control" />
            </div>

            <div class="col-md-6">
                <input type="number"
                    t-model="state.newWateringFrequency"
                    placeholder="Water every X days"
                    class="form-control" />
            </div>

            <div class="col-md-6">
                <input type="number"
                    t-model="state.newWateringAmount"
                    placeholder="Watering amount (ml)"
                    class="form-control" />
            </div>

            <div class="col-md-6">
                <input type="date"
                    t-model="state.newSeasonStart"
                    class="form-control" />
            </div>

            <div class="col-md-6">
                <input type="date"
                    t-model="state.newSeasonEnd"
                    class="form-control" />
            </div>

            <div class="col-12">
                <button t-on-click="addFlower" type="button"
                    class="btn btn-primary btn-lg w-100 mt-2">
                    Add Flower
                </button>
            </div>
        </form>

        <!-- Flower List -->
        <ul class="list-group">
            <t t-foreach="state.flowers" t-as="flower" t-key="flower.id">
                <li class="list-group-item mb-3 shadow-sm rounded-3">
                    <h5 class="fw-bold mb-1 text-dark">
                        <t t-out="flower.common_name" />
                    </h5>
                    <p class="fst-italic text-secondary mb-1">
                        <t t-out="flower.scientific_name" />
                    </p>
                    <p class="text-primary fw-semibold mb-1">ðŸ’§ Water every <t
                            t-out="flower.watering_frequency" /> days â€” <t
                            t-out="flower.watering_amount" /> ml</p>
                    <p class="text-muted small">ðŸŒ± Season: <t t-out="flower.season_start" /> â†’ <t
                            t-out="flower.season_end" /></p>
                </li>
            </t>
        </ul>
    </div>
</t>